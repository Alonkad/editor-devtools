{
  "name": "SantaDevTools",
  "version": "1.0.11",
  "manifest_version": 2,
  "description": "Santa Devloper Tools",
  "icons": {
    "16": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon-19.png",
      "38": "assets/images/icon-38.png"
    },
    "default_title": "Santa DevTools",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://users.wix.com/wix-users/login/form"
      ],
      "js": [
        "scripts/logInGoogle.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/contentScripts.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://github.com/wix-private/*/pull/*"
      ],
      "js": [
        "scripts/pullRequest.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "scripts/contentActions.js"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs"
  ]
}
